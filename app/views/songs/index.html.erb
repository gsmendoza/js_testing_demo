<h1>Listing songs</h1>

<div class="player">
  <div class="field artist">
    <label>Artist: </label>
    <span class="value"></span>
  </div>
  <div class="field title">
    <label>Title: </label>
    <span class="value"></span>
  </div>
  <div class="field status">
    <label>Status: </label>
    <span class="value"></span>
  </div>
  <div class="field message">
    <label>Message: </label>
    <span class="value"></span>
  </div>
  <%= submit_tag('Play', :class => 'action play') %>
  <%= submit_tag('Pause', :class => 'action pause') %>
</div>

<table class="songs">
  <tr>
    <th>Artist</th>
    <th>Title</th>
  </tr>

<% @songs.each do |song| %>
  <% content_tag_for(:tr, song) do %>
    <td><%=h song.artist %></td>
    <td><%=h song.title %></td>
  <% end %>
<% end %>
</table>
